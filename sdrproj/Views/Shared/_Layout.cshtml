<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Saveur De Rodrigues</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css " />

</head>


<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3">
                        <i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                        <a href="https://maps.app.goo.gl/BcGYSA5wp8tsaPZr5" class="text-white">Rodrigues</a>
                    </small>
                    <small class="me-3">
                        <i class="fas fa-envelope me-2 text-secondary"></i>
                        <a href="#" class="text-white">saveurde.rodrigues@gmail.com</a>
                    </small>
                </div>
                <div class="top-link pe-2 d-flex gap-3">
                    <!-- Admin Dropdown -->
                    @{
                        var adminId = Context.Session.GetInt32("AdminId"); // Assuming AdminId is stored in session
                    }
                    <div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center text-white text-decoration-none" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-shield me-1"></i> Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="adminDropdown">
                            @if (adminId == null)
                            {
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="AdminAccount" asp-action="Login">
                                        <i class="fas fa-sign-in-alt me-2 text-primary"></i>Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold text-danger" asp-controller="AdminAccount" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>




                    <!-- Merchant Dropdown -->
                    @{
                        var merchantId = Context.Session.GetInt32("MerchantId");
                    }
                    <div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center text-white text-decoration-none" href="#" id="merchantDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-store me-1"></i> Merchant
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="merchantDropdown">
                            @if (merchantId == null)
                            {
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="MerchantAccount" asp-action="Register">
                                        <i class="fas fa-user-plus me-2 text-primary"></i>Register
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="MerchantAccount" asp-action="Login">
                                        <i class="fas fa-sign-in-alt me-2 text-primary"></i>Login
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="MerchantAccount" asp-action="Edit" asp-route-id="@merchantId">
                                        <i class="fas fa-user-edit me-2 text-primary"></i>Edit Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item py-2 px-3 fw-semibold text-danger" asp-controller="MerchantAccount" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>




                    <!-- User Dropdown -->
                    @{
                        var userId = Context.Session.GetString("UserId");
                        var userName = Context.Session.GetString("Name");
                    }
                    @if (userId != null)
                    {
                        <div class="dropdown">
                            <a class="dropdown-toggle d-flex align-items-center text-white text-decoration-none" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i> @(!string.IsNullOrEmpty(userName) ? userName : "User")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="UserAccount" asp-action="Edit" asp-route-id="@userId"><i class="fas fa-user-edit me-2 text-primary"></i>Edit Profile</a></li>
                                <li><a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="Cart" asp-action="ViewProduct"><i class="fas fa-box me-2 text-primary"></i>My Products</a></li>
                                <li><a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="Home" asp-action="ViewWishList"><i class="fas fa-heart me-2 text-primary"></i>Wishlist</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item py-2 px-3 fw-semibold text-danger" asp-controller="UserAccount" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown">
                            <a class="dropdown-toggle d-flex align-items-center text-white text-decoration-none" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i> User
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="UserAccount" asp-action="Register"><i class="fas fa-user-plus me-2 text-primary"></i>Register</a></li>
                                <li><a class="dropdown-item py-2 px-3 fw-semibold" asp-controller="UserAccount" asp-action="Login"><i class="fas fa-sign-in-alt me-2 text-primary"></i>Login</a></li>
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </div>

        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a href="index.html" class="navbar-brand">
                    <h1 class="text-primary display-6">Saveur De Rodrigues</h1>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-controller="Cart" asp-action="ViewProduct">Shop</a>
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="ShopDetail">Shop Detail</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0 bg-secondary rounded-0">

                                
                                <a class="dropdown-item" asp-controller="Cart" asp-action="ViewCart">Cart</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Checkout">Checkout</a>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Testimonial">Testimonial</a>
                                @if (Context.Session.GetString("MerchantId") != null)
                                {
                                    <a class="dropdown-item" asp-controller="MerchantProduct" asp-action="Index">Product</a>
                                    <a class="dropdown-item" asp-controller="MerchantOrder" asp-action="ViewOrders">Order</a>
                                }
                            </div>
                        </div>
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </div>
                    <div class="d-flex m-3 me-0">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search text-primary"></i>
                        </button>
                        <a href="#" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                        </a>
                        
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Navbar End -->




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">
            <div class="pb-4 mb-4" style="border-bottom: 1px solid rgba(226, 175, 24, 0.5) ;">
                <div class="row g-4">
                    <div class="col-lg-3">
                        <a href="#">
                            <h1 class="text-primary mb-0">Saveur De Rodrigues</h1>
                            <p class="text-secondary mb-0">Fresh products</p>
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="position-relative mx-auto">
                            <input class="form-control border-0 w-100 py-3 px-4 rounded-pill" type="number" placeholder="Your Email">
                            <button type="submit" class="btn btn-primary border-0 border-secondary py-3 px-4 position-absolute rounded-pill text-white" style="top: 0; right: 0;">Subscribe Now</button>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="d-flex justify-content-end pt-3">
                            <a class="btn  btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-secondary me-2 btn-md-square rounded-circle" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-secondary btn-md-square rounded-circle" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Why People Like us!</h4>
                        <p class="mb-4">
                            We sell unique, fresh and organic product from rodrigues!
                        </p>
                        <a href="" class="btn border-secondary py-2 px-4 rounded-pill text-primary">Read More</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Shop Info</h4>
                        <a class="btn-link" href="">About Us</a>
                        <a class="btn-link" href="">Contact Us</a>
                        <a class="btn-link" href="">Privacy Policy</a>
                        <a class="btn-link" href="">Terms & Condition</a>
                        <a class="btn-link" href="">Return Policy</a>
                        <a class="btn-link" href="">FAQs & Help</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex flex-column text-start footer-item">
                        <h4 class="text-light mb-3">Account</h4>
                        <a class="btn-link" href="">My Account</a>
                        <a class="btn-link" href="">Shop details</a>
                        <a class="btn-link" href="">Shopping Cart</a>
                        <a class="btn-link" href="">Wishlist</a>
                        <a class="btn-link" href="">Order History</a>
                        <a class="btn-link" href="">International Orders</a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-item">
                        <h4 class="text-light mb-3">Contact</h4>
                        <p>Address: Rodrigues</p>
                        <p>Email: saveurde.rodrigues@gmail.com</p>
                        <p>Phone: 00000000</p>
                        <p>Payment Accepted</p>
                        <img src="img/payment.png" class="img-fluid" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright bg-dark py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <span class="text-light"><a href="#"><i class="fas fa-copyright text-light me-2"></i>Your Site Name</a>, All right reserved.</span>
                </div>
                <div class="col-md-6 my-auto text-center text-md-end text-white">
                    <!--/*** This template is free as long as you keep the below author’s credit link/attribution link/backlink. ***/-->
                    <!--/*** If you'd like to use the template without the below author’s credit link/attribution link/backlink, ***/-->
