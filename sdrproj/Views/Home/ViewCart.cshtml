@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Shopping Cart";
    var cartTotal = ViewBag.CartTotal ?? 0m;
    var itemCount = ViewBag.ItemCount ?? 0;
}

<!-- Display Messages -->
@if (TempData["CartMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["CartMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Cart Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="ViewProduct">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Shopping Cart</h1>
                    @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center">
                                                <img src="@item.Product.ImageUrl" class="img-fluid me-5 rounded-circle" 
                                                     style="width: 80px; height: 80px; object-fit: cover;" alt="@item.Product.Name">
                                            </div>
                                        </th>
                                        <td>
                                            <p class="mb-0 mt-4">@item.Product.Name</p>
                                            @if (!string.IsNullOrEmpty(item.Product.Description))
                                            {
                                                <small class="text-muted">@item.Product.Description</small>
                                            }
                                            <br>
                                            <small class="text-success">Stock: @item.Product.Stock available</small>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4">$@item.Product.Price</p>
                                        </td>
                                        <td>
                                            <div class="input-group quantity mt-4" style="width: 100px;">
                                                <div class="input-group-btn">
                                                    <form asp-action="UpdateCartQuantity" method="post" class="d-inline">
                                                        <input type="hidden" name="cartId" value="@item.CartId" />
                                                        <input type="hidden" name="count" value="@(item.Count - 1)" />
                                                        <button class="btn btn-sm btn-minus rounded-circle bg-light border" 
                                                                type="submit" @(item.Count <= 1 ? "disabled" : "")>
                                                            <i class="fa fa-minus"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                                <span class="form-control form-control-sm text-center border-0">@item.Count</span>
                                                <div class="input-group-btn">
                                                    <form asp-action="UpdateCartQuantity" method="post" class="d-inline">
                                                        <input type="hidden" name="cartId" value="@item.CartId" />
                                                        <input type="hidden" name="count" value="@(item.Count + 1)" />
                                                        <button class="btn btn-sm btn-plus rounded-circle bg-light border" 
                                                                type="submit" @(item.Count >= item.Product.Stock ? "disabled" : "")>
                                                            <i class="fa fa-plus"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="mb-0 mt-4">$@((item.Product.Price * item.Count).ToString("F2"))</p>
                                        </td>
                                        <td>
                                            @* <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                                <input type="hidden" name="cartId" value="@item.CartId" />
                                                <button type="submit" class="btn btn-md rounded-circle bg-light border mt-4" 
                                                        onclick="return confirm('Remove this item from cart?')">
                                                    <i class="fa fa-times text-danger"></i>
                                                </button>
                                            </form> *@


                                            <a asp-controller="Home" asp-action="Remove" asp-route-id="@item.CartId" class="btn btn-sm btn-outline-success">Remove </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Cart Summary -->
                    <div class="mt-5">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="bg-light rounded p-4">
                                    <h5>Continue Shopping</h5>
                                    <p class="mb-0">Add more items to your cart or proceed to checkout.</p>
                                    <a asp-action="ViewProduct" class="btn btn-primary mt-3">
                                        <i class="fa fa-arrow-left me-2"></i>Continue Shopping
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="bg-light rounded p-4">
                                    <h5>Cart Summary</h5>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Items (@itemCount):</span>
                                        <span>$@cartTotal.ToString("F2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Shipping:</span>
                                        <span class="text-success">Free</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tax:</span>
                                        <span>$@((cartTotal * 0.1m).ToString("F2"))</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between mb-3">
                                        <strong>Total:</strong>
                                        <strong>$@((cartTotal * 1.1m).ToString("F2"))</strong>
                                    </div>
                                    <a asp-action="Checkout" class="btn btn-success w-100">
                                        <i class="fa fa-credit-card me-2"></i>Proceed to Checkout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Empty Cart -->
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fa fa-shopping-cart fa-5x text-muted"></i>
                        </div>
                        <h3 class="mb-3">Your cart is empty</h3>
                        <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
                        <a asp-action="ViewProduct" class="btn btn-primary btn-lg">
                            <i class="fa fa-shopping-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

<script>
    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        $('.alert').alert('close');
    }, 5000);

    // Prevent double-clicking on quantity buttons
    document.querySelectorAll('button[type="submit"]').forEach(function(button) {
        button.addEventListener('click', function() {
            this.disabled = true;
            setTimeout(() => {
                this.disabled = false;
            }, 2000);
        });
    });
</script>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Shopping Cart</h1>
    @if (Model.Any())
    {
        <div>
            <span class="badge bg-primary fs-6 me-2">@itemCount items</span>
            <a asp-action="ClearCart" class="btn btn-outline-danger btn-sm" 
               onclick="return confirm('Are you sure you want to clear your cart?')">
                <i class="fa fa-trash me-1"></i>Clear Cart
            </a>
        </div>
    }
</div>
