<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Delete SubCategory</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this subcategory?
                    </div>

                    <div class="mb-3">
                        <strong>Category:</strong> @Model.Category.Name
                    </div>
                    <div class="mb-3">
                        <strong>SubCategory Name:</strong> @Model.Name
                    </div>

                    <form asp-action="DeleteSubCategory" method="post">
                        <input asp-for="SubCategoryId" type="hidden" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete SubCategory</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>