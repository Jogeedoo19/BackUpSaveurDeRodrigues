<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Category Management</h3>
                    <div>
                        <a href="@Url.Action("CreateCategory")" class="btn btn-primary me-2">
                            <i class="fas fa-plus"></i> Add Category
                        </a>
                        <a href="@Url.Action("CreateSubCategory")" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add SubCategory
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Display Messages -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Category Name</th>
                                    <th>SubCategories</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@category.Name</strong>
                                            </td>
                                            <td>
                                                @if (category.SubCategories.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var subcat in category.SubCategories)
                                                        {
                                                            <span class="badge bg-secondary me-1 mb-1">@subcat.Name</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No subcategories</em>
                                                }
                                            </td>
                                            <td>@category.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditCategory", new { id = category.CategoryId })"
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a href="@Url.Action("DeleteCategory", new { id = category.CategoryId })"
                                                       class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        @if (category.SubCategories.Any())
                                        {
                                            @foreach (var subcat in category.SubCategories)
                                            {
                                                <tr class="table-light">
                                                    <td class="ps-4">
                                                        <i class="fas fa-arrow-right text-muted me-2"></i>
                                                        @subcat.Name
                                                    </td>
                                                    <td>-</td>
                                                    <td>@subcat.CreatedAt.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="@Url.Action("EditSubCategory", new { id = subcat.SubCategoryId })"
                                                               class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                            <a href="@Url.Action("DeleteSubCategory", new { id = subcat.SubCategoryId })"
                                                               class="btn btn-outline-danger btn-sm">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-2x mb-3"></i>
                                            <p>No categories found. <a href="@Url.Action("CreateCategory")">Create your first category</a></p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>